<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/border">


    <TextView
        android:id="@+id/name_magazine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textAlignment="center"
        android:textStyle="bold"
        tools:text="Revista"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/description_magazine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries," />
    <ImageView
        android:id="@+id/image_magazine"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/inicio_magazine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@color/verdusco"
            android:layout_weight="1"
            android:text="INICIO: "
            android:textAlignment="center"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/fin_magazine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:background="@color/verdusco"
            android:layout_weight="1"
            android:text="FIN: "
            android:textAlignment="center"
            android:textStyle="italic"/>

    </LinearLayout>
    <TextView
        android:id="@+id/titulo_autores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autores"
        android:textStyle="bold"
        android:background="@color/violeta"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/lista_autores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>