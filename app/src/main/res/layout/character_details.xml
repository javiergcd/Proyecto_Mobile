<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name_detailsCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Batman"/>
    <ImageView
        android:id="@+id/image_detailsCharacter"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/description_detailsCharacter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries," />
    <TextView
        android:id="@+id/comics_relacionados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violeta"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Comics relacionados"/>
    <TextView
        android:id="@+id/comics_relacionadosLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/series_relacionados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/violeta"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Series relacionados"/>
    <TextView
        android:id="@+id/series_relacionadosLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        

</LinearLayout>